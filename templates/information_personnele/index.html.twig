{% extends '/frontOffice/base.html.twig' %}
{% block title %}Profile{% endblock %}



{% block stylesheets %}

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Add your custom CSS styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .profile-info p {
            text-align: center;
        }
        .profile-info p span {
            font-weight: bold;
        }
        /* Adjust input width */
        input[type="text"] {
            max-width: 200px; /* Adjust as needed */
        }
        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
 input[type="text"] {
            max-width: 200px;
        }
       .profile-image {
    max-width: 200px;
    height: auto;
    margin: 0 auto;
    display: block;
    border-radius: 50%; 
    overflow: hidden;
}

    </style>
{% endblock %}
{% block body %}
    <div class="container">
         

          {% for flashError in app.flashes('error') %}
        <div class="alert alert-danger" id = "error-flash-message" >{{ flashError }}
         <script>
        // Add a timeout to hide the success flash message after 3 seconds
        setTimeout(function() {
            var successFlashMessage = document.getElementById('error-flash-message');
            if (successFlashMessage) {
                successFlashMessage.remove();
            }
        }, 1500);
    </script>
        </div>
    {% endfor %}
   {% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success" id="success-flash-message">{{ flashMessage }}</div>
    <script>
        // Add a timeout to hide the success flash message after 3 seconds
        setTimeout(function() {
            var successFlashMessage = document.getElementById('success-flash-message');
            if (successFlashMessage) {
                successFlashMessage.remove();
            }
        }, 1500);
    </script>
{% endfor %}
           <div class="row">
            <div class="col-md-4">
      {% if app.user.image %}
    <label for="image">
        <img src="{{ asset('/images/' ~ app.user.image) }}" alt="Profile Image" class="profile-image" style="border-radius: 50%; overflow: hidden;">
    </label>
{% else %}
    <label for="image">
        <img src="{{ asset('/images/avatar.png') }}" alt="Profile Image" class="profile-image" style="border-radius: 50%; overflow: hidden;">
    </label>
{% endif %}

         <div class="form-group" >
                <label for="image">Email: {{app.user.email}}</label>
          </div>
            </div>
             
            <div class="col-md-8">
        <form id="profileForm" action="/profile/edit" method="POST" enctype="multipart/form-data">
         <div class="form-group" hidden>
                <label for="image">Profile Image:</label>
                <input type="file" class="form-control-file" id="image" name="image" >
          </div>
         
          <div class="form-group row" hidden>
                <label for="id" class="col-sm-2 col-form-label">Id:</label>
                <div class="col-sm-10">
                    <input type="text" id="id" name="id"  {% if information_personnele %} value="{{  information_personnele.id }}" {% endif %} class="form-control" >
                </div>
            </div>
        
            <div class="form-group row">
                <label for="nom" class="col-sm-2 col-form-label">Nom (*):</label>
                <div class="col-sm-10">
                    <input type="text" id="nom" name="nom"  {% if information_personnele %} value="{{ information_personnele.nom }}" {% endif %} class="form-control" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="prenom" class="col-sm-2 col-form-label">Prénom  (*):</label>
                <div class="col-sm-10">
                    <input type="text" id="prenom" name="prenom"  {% if information_personnele %} value="{{ information_personnele.prenom }}" {% endif %} class="form-control" disabled>
                </div>
            </div>
           <div class="form-group row">
            <label for="sexe" class="col-sm-2 col-form-label">Sexe  (*):</label>
            <div class="col-sm-10" >
                <select id="sexe" name="sexe" class="form-control" >
               
                    <option value="male"  {% if information_personnele %} {{ information_personnele.sexe == 'male' ? 'selected' : '' }} {% endif %}>Male</option>
                    <option value="female"  {% if information_personnele %} {{ information_personnele.sexe == 'female' ? 'selected' : '' }} {% endif %}>Female</option>
                    
                </select>
            </div>
        </div>

            <div class="form-group row">
                <label for="taille" class="col-sm-2 col-form-label">Taille  (*):</label>
                <div class="col-sm-10">
                    <input type="text" id="taille" name="taille"  {% if information_personnele %} value="{{ information_personnele.taille }}" {% endif %} class="form-control" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="poids" class="col-sm-2 col-form-label">Poids  (*):</label>
                <div class="col-sm-10">
                    <input type="text" id="poids" name="poids"   {% if information_personnele %}value="{{ information_personnele.poids }}"  {% endif %} class="form-control" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="maladie" class="col-sm-2 col-form-label">Maladie:</label>
                <div class="col-sm-10">
                    <input type="text" id="maladie" name="maladie" {% if information_personnele %} value="{{ information_personnele.maladie }}" {% endif %} class="form-control" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="numTel" class="col-sm-2 col-form-label">Numéro de Téléphone  (*):</label>
                <div class="col-sm-10">
                    <input type="text" id="numTel" name="numTel"  {% if information_personnele %} value="{{ information_personnele.numTel }}" {% endif %} class="form-control" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="adresse" class="col-sm-2 col-form-label">Adresse  (*):</label>
                <div class="col-sm-10">
                    <input type="text" id="adresse" name="adresse"  {% if information_personnele %} value="{{ information_personnele.adresse }}" {% endif %} class="form-control" disabled>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-auto">
                    <button type="button" id="editBtn" class="btn btn-primary">Edit Profile</button>
                    <button type="submit" id="saveBtn" class="btn btn-success" style="display: none;">Save</button>
                </div>
            </div>
        </form>
        
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
$(document).ready(function(){
    $('#editBtn').click(function(){
        $('#profileForm :input').prop('disabled', false); 

        $('#saveBtn').show();
        $('#editBtn').hide();
    });
});
document.addEventListener('DOMContentLoaded', function() {
        const image = document.querySelector('.profile-image');
        const fileInput = document.getElementById('imageUpload');

        if (image) {
            image.addEventListener('click', function() {
                fileInput.click();
            });
        }
    });


    </script>
{% endblock %}
