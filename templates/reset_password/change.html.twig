   {% extends '/frontOffice/base.html.twig' %}

{% block title %}Reset Password!{% endblock %}

{% block body %}
<div class="container"> 
    <h1>Reset Password</h1>
    {{ form_start(form) }}
     <div class="alert alert-danger">
        <ul>
        {% if  form_errors(form.recaptcha) %}
          {{ form_errors(form.recaptcha) }}
          {% endif %}
             {% if  form_errors(form.password) %}
          {{ form_errors(form.password) }}
          {% endif %}
            {% if  form_errors(form.repassword) %}
          {{ form_errors(form.repassword) }}
          {% endif %}
           
        </ul>
    </div> 
<div class="form-group col-6">
        {{ form_label(form.password ,'Password') }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Password'}}) }}
    </div>
    <div class="form-group col-6" >
        {{ form_label(form.repassword, 'Password') }}
        {{ form_widget(form.repassword, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Password'}}) }}
      </div>
        <div class="form-group col-6" >
        {{ form_row(form.recaptcha) }}

    <button type="submit" class="btn btn-primary" style="background-color: #40ba37; margin-top:20%">Register</button>
    </div>
{{form_end(form)}}
</div>
{% endblock %}